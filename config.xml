<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.hellocordova" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Matafuegos Ya</name>
    <description>
        La App que mas sabe de incendios!
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Widux.com.ar
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon src="res/icon/android/icon-36-ldpi.png" qualifier="ldpi"/>
        <icon src="res/icon/android/icon-48-mdpi.png" qualifier="mdpi"/>
        <icon src="res/icon/android/icon-72-hdpi.png" qualifier="hdpi"/>
        <icon src="res/icon/android/icon-96-xhdpi.png" qualifier="xhdpi"/>
        <splash src="res/screen/android/screen-hdpi-landscape.png" qualifier="land-ldpi"/>
        <splash src="res/screen/android/screen-hdpi-portrait.png" qualifier="land-mdpi"/>
        <splash src="res/screen/android/screen-ldpi-landscape.png" qualifier="land-hdpi"/>
        <splash src="res/screen/android/screen-ldpi-portrait.png" qualifier="land-xhdpi"/>
        <splash src="res/screen/android/screen-mdpi-landscape.png" qualifier="land-xxhdpi"/>
        <splash src="res/screen/android/screen-mdpi-portrait.png" qualifier="land-xxxhdpi"/>
        <splash src="res/screen/android/screen-xhdpi-landscape.png" qualifier="port-ldpi"/>
        <splash src="res/screen/android/screen-xhdpi-portrait.png" qualifier="port-mdpi"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="~6.3.0" />
    
</widget>
